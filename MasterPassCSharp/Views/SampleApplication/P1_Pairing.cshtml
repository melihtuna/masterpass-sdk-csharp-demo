	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script> 
	  
</head>
<body class="pairing">
    
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    MasterPass Pairing Flow</h1>
            </div>
            <div id="logindisplay">
                &nbsp;
            </div>
        </div>
        <div id="main">
            <h1>
                Pairing Token Received
            </h1>
            
